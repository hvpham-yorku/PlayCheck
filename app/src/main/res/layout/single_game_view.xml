<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Acts as a container for a single game -->
    <androidx.cardview.widget.CardView
        android:id="@+id/singlegame"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        app:cardBackgroundColor="#73c8dc"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Make list horizonal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Text that appears for each game -->
            <TextView
                android:id="@+id/gameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Name" />

            <TextView
                android:id="@+id/gameDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Date and Start Hour" />

            <TextView
                android:id="@+id/gameVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Venue" />

            <TextView
                android:id="@+id/gameType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Type" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>