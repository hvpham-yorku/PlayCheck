<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.playcheck">  <!-- PlayCheck -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light">

        <!-- Login is your launcher activity -->
        <activity
            android:name=".activityfiles.Login"
            android:exported="true"
            android:theme="@style/Theme.Material3.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities - only exported if needed by other apps -->
        <activity
            android:name=".activityfiles.Registration"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <activity
            android:name=".activityfiles.ProfileSetup"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <activity
            android:name=".activityfiles.GameListPlayer"
            android:exported="false"
            android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <activity
            android:name=".activityfiles.GameSchedule"
            android:exported="false"
        android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <activity
            android:name=".activityfiles.MainActivity"
            android:exported="false"
        android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <activity
            android:name=".activityfiles.RefereeActivity"
            android:exported="false"
        android:theme="@style/Theme.Material3.Light.NoActionBar" />

        <activity
            android:name=".activityfiles.GameActivity"
            android:exported="false"
        android:theme="@style/Theme.Material3.Light.NoActionBar" />

    </application>
</manifest>